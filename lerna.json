{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "version": {
      "exact": true,
      "ignoreChanges": ["*.md"],
      "message": "Release"
    },
    "publish": {
      "npmClient": "npm",
      "allowBranch": ["master", "canary"],
      "registry": "https://registry.npmjs.org/"
    }
  },
  "version": "independent"
}
